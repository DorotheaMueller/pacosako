{
    "mainLanguage": {
        "filename": "English.json",
        "name": "English",
        "locale": "en"
    },
    "inputFolder": "i18n",
    "output": ".elm-i18n/Translations.elm",
    "translatedTo": [
        {
            "filename": "Dutch.json",
            "name": "Dutch",
            "locale": "nl"
        },
        {
            "filename": "Esperanto.json",
            "name": "Esperanto",
            "locale": "eo"
        },
        {
            "filename": "de.json",
            "name": "German",
            "locale": "de"
        },
        {
            "filename": "sv.json",
            "name": "Swedish",
            "locale": "sv"
        },
        {
            "filename": "Spanish.json",
            "name": "Spanish",
            "locale": "es"
        }
    ],
    "scripts": {
        "compile": [
            "pytrans.py {name}",
            "mkdir -p ../build/elm",
            "mkdir -p ../target/js",
            "elm make src/Main.elm --optimize --output=../build/elm/elm.{locale}.js",
            "terser ../build/elm/elm.{locale}.js -o ../target/js/elm.{locale}.min.js --mangle --compress"
        ]
    }
}